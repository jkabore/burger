<div class="wraper">
    <div class="jumbotron">
        <div class="container">
  <div class="row">
    <div class="col">
    <ul>   
      <li>
          {{#each burgers}}
           {{#unless this.devoured}}
           <div>
              <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
			<input type="hidden" name="devoured" value="true">
		    <button class="btn btn-default btn-lg" type="submit">Devour </button>
			</form>
            </div>
          {{/unless}}
        {{/each}}
      </li>
      </ul>
    </div>
    <div class="col">
<ul>
				{{#each burgers}}
					{{#if this.devoured}}
					<li>
						<p>{{this.burger_name}} </p>
					</li>
					{{/if}}
				{{/each}}
				</ul>
     
    </div>
  </div>
  </div>
    <div class="col align-self-center">
        <form class="create-update-form" action="burgers/create" method="POST">

			<div class="form-group">
				<textarea class="form-control input-lg" type="text" name="burger_name" rows="3"> </textarea>
			</div>

			<button class="btn btn-default btn-lg" type="submit">Add Burger!</button>
		</form>
      
    </div>
        
    </div>
</div>
</div>